<%- include("partials/header") %>

<div class="container">

  <div class="pageId">

    <h1>This is the post you requested.</h1>

  </div>

  <div class="post">

    <h2><%= item.title %></h2>

    <p><%= item.body %></p>
    <p>Posted on <%= item.dateString %> -
      <a href="/p/<%= item._id %>/edit">
        <ion-icon name="pencil-outline"></ion-icon>
      </a>
      <a href="/d/<%= item._id %>">
        <ion-icon name="trash-outline"></ion-icon>
      </a>
    </p>

  </div>

</div>

<%- include("partials/footer") %>