<%- include("partials/header") %>

<div class="container">
  <h1>This is where you update a blog post.</h1>
</div>

<div class="container">
  <form action="/" method="POST">

    <div class="form-group">
      <label for="blogPostTitle">Title</label>
      <input type="text" class="form-control" name="title" value="<%= data.title %>" id=" blogPostTitle">
    </div>

    <div class="form-group">
      <label for="blogPostBody">Body</label>
      <textarea class="form-control" name="body" id="blogPostBody" rows="5"></textarea>
    </div>

    <div class="form-group">
      <button class="btn btn-lg btn-outline-primary btn-block">Submit</button>
    </div>

  </form>

  <button class="btn btn-outline-danger">Cancel</button>
</div>

<%- include("partials/footer") %>